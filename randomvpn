#!/bin/bash

PATH=$PATH:/etc/randomVPN
source ./settings.sh

if [ $# -eq 0 ]
then
	./errorlog.sh "NoArg"
elif [ $1 = "-s" ]
then
	if ifconfig | grep "tun" &> /dev/null
	then
		./errorlog.sh "TunnelOpen"
	else
	        ./connectTunnel.sh
	fi
elif [ $1 = "-c" ]
then
	if [ $2 = "Reboot" ]
	then
		if [ $systemreboot =  true ]
		then
			if [ $restarttime = "$(date)" ]
				sudo reboot
			fi
		fi
	elif [ $2 = "Start" ]
	then
		./connectTunnel.sh
	fi
elif [ $1 = "-l" ]
then
        sudo ./showlogs.sh
fi
